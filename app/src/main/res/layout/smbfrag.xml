<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="*">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1"
        android:fillViewport="true"
        android:layoutMode="opticalBounds"
        android:measureAllChildren="true"
        android:nestedScrollingEnabled="true">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:fillViewport="true"
        android:layoutMode="opticalBounds"
        android:measureAllChildren="true"
        android:nestedScrollingEnabled="true">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:layoutMode="opticalBounds">
    
    <TableRow
        android:id="@+id/smbTableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="2">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose"
                android:id="@+id/bt_smbplayer"
                android:enabled="true"
                android:layout_column="0" />

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samba Player"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>

    </TableRow>

    <TableRow
        android:id="@+id/smbTableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/samba"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="com.mxtech.videoplayer.ad"
            android:layout_span="2" />
    </TableRow>
    
    <TableRow
        android:id="@+id/smbTableRow8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        
        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CIFS Mount Path"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_span="2" />
        
    </TableRow>

    <TableRow
        android:id="@+id/smbTableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/cifs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="/mnt/xbmcwrapper"
            android:layout_span="2" />
    </TableRow>

            <TableRow
        android:id="@+id/smbTableRow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samba Replace"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_span="2" />
    </TableRow>

            <TableRow
                android:id="@+id/smbTableRow9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                    android:layout_span="2">

            <TableRow
                android:id="@+id/smbTableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/r1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/rfrom"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="(?i)smb://10.0.1.4/2tb" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/rto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="file:///mnt/sata" />
                    </TableRow>

                </TableLayout>

            </TableRow>

            <TableRow
                android:id="@+id/smbTableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <CheckBox
                    android:id="@+id/r2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/rfrom2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="(?i)smb://cubie/2tb" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/rto2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="file:///mnt/sata" />
                    </TableRow>
                </TableLayout>

            </TableRow>
        </TableLayout>
            </TableRow>

            <TableRow
        android:id="@+id/smbTableRow10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        
        <TextView
            android:id="@+id/TextView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samba user"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:height="40dp" />

        <EditText
            android:id="@+id/smbuser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="" />

    </TableRow>

    <TableRow
        android:id="@+id/smbTableRow12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        
        <TextView
            android:id="@+id/TextView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samba password"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:height="40dp" />

        <EditText
            android:id="@+id/smbpass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:width="135dp" />

    </TableRow>

    <TableRow
        android:id="@+id/smbTableRow13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    </TableRow>

            <TableRow
        android:id="@+id/smbTableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samba Method"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/bt_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />
    </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom mount command Ë‡"
                    android:id="@+id/cb_mount"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_span="2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tr_mount">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tb_mount"
                            android:singleLine="true"
                            android:text="mount -o remount,rw /;mkdir -p %mount_path%;chmod 777 %mount_path%;umount %mount_path%;mount -o remount,ro /;mount -t cifs -o username=%smbuser%,password=%smbpass%,ro,iocharset=utf8 %smbpath% %mount_path%" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Show debug"
                            android:id="@+id/cb_debug"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                    </TableRow>
                </TableLayout>
            </TableRow>

        </TableLayout>
        </HorizontalScrollView>
    </ScrollView>
    </TableLayout>
